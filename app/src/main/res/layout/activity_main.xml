<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.example.ganesh.calculator20.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        >

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1+2+3+4"
            android:textSize="30sp"
            android:gravity="right"
            android:textColor="@color/white"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="10"
            android:textSize="40sp"
            android:gravity="right"
            android:padding="6dp"
            />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="4">

            <Button
                android:id="@+id/btnClear"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:text="C"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/black"
                android:textColor="@color/amber"
                android:layout_margin="2dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textSize="40sp"
                />
            <Button
                android:id="@+id/btnpercentage"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:text="%"
                android:layout_row="0"
                android:layout_toRightOf="@+id/btnClear"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btndivide"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:text="รท"
                android:layout_toRightOf="@+id/btnpercentage"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnmultiple"
                android:text="x"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_row="0"
                android:layout_toRightOf="@+id/btndivide"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnSeven"
                android:text="7"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_below="@+id/btnClear"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"

                />
            <Button
                android:id="@+id/btnEight"
                android:text="8"
                android:layout_row="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnSeven"
                android:layout_below="@id/btnClear"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnNine"
                android:text="9"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnEight"
                android:layout_below="@id/btnClear"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnNine"
                android:layout_below="@id/btnClear"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnFour"
                android:text="4"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_below="@id/btnSeven"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnFive"
                android:text="5"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnFour"
                android:layout_below="@id/btnSeven"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnSix"
                android:text="6"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnFive"
                android:layout_below="@id/btnSeven"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnAdd"
                android:text="+"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnSix"
                android:layout_below="@id/btnSeven"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnOne"
                android:text="1"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_below="@id/btnFour"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnTwo"
                android:text="2"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnOne"
                android:layout_below="@id/btnFour"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnThree"
                android:text="3"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnTwo"
                android:layout_below="@id/btnFour"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:layout_row="3"
                android:layout_column="3"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="150dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnThree"
                android:layout_below="@id/btnFour"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/amber"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnDecimal"
                android:text="."
                android:layout_row="4"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_below="@id/btnOne"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnZero"
                android:text="0"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnDecimal"
                android:layout_below="@id/btnOne"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/btnDoubleZero"
                android:text="00"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/btnZero"
                android:layout_below="@id/btnOne"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/black"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
